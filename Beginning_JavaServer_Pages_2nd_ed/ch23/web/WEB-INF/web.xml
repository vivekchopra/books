<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app version="2.4" uri="http://java.sun.com/xml/ns/j2ee" >

  <servlet>
    <servlet-name>AdminServlet</servlet-name>
    <display-name>Football administration servlet</display-name>
    <description>Football administration servlet</description>
    <servlet-class>com.wrox.begjsp.ch23.football.AdminServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminServlet</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  
  <resource-ref>
    <res-ref-name>jdbc/FootyDB</res-ref-name>    
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  
</web-app>